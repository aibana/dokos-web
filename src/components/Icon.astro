---
interface Props {
  name: string;
  class?: string;
  size?: string;
  label?: string;
}

const { name, class: className = '', size = 'text-xl', label } = Astro.props;
---

<span
  class:list={['material-symbols-outlined', size, className]}
  aria-hidden={label ? undefined : 'true'}
  aria-label={label}
  role={label ? 'img' : undefined}
>{name}</span>
