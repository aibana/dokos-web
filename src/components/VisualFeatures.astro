---
import Icon from './Icon.astro';
import type { Translations } from '../i18n/utils';

interface Props {
  t: Translations;
}

const { t } = Astro.props;
---

<section class="py-24" id="visual" aria-labelledby="visual-heading">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 id="visual-heading" class="sr-only">{t.visualFeatures.srHeading}</h2>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Markdown Pro Card -->
      <div class="group relative bg-surface-dark border border-slate-800 rounded-2xl overflow-hidden hover:border-primary/50 transition-all duration-300 hover:shadow-glow">
        <div class="absolute inset-0 bg-gradient-to-br from-primary/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity" aria-hidden="true"></div>
        <div class="p-8 relative z-10">
          <h3 class="text-2xl font-bold text-white mb-2">{t.visualFeatures.markdownPro}</h3>
          <p class="text-slate-400 mb-6">{t.visualFeatures.markdownProSub}</p>
          <div class="space-y-4">
            <div class="flex items-start gap-3">
              <Icon name="schema" class="text-primary mt-1" />
              <div>
                <h4 class="text-white font-medium">{t.visualFeatures.mermaidDiagrams}</h4>
                <p class="text-sm text-slate-500">{t.visualFeatures.mermaidDesc}</p>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <Icon name="functions" class="text-primary mt-1" />
              <div>
                <h4 class="text-white font-medium">{t.visualFeatures.latexSupport}</h4>
                <p class="text-sm text-slate-500">{t.visualFeatures.latexDesc}</p>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <Icon name="warning" class="text-primary mt-1" />
              <div>
                <h4 class="text-white font-medium">{t.visualFeatures.githubAlerts}</h4>
                <p class="text-sm text-slate-500">{t.visualFeatures.githubAlertsDesc}</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Decorative mockup -->
        <div class="h-40 bg-[#0b0f19] mt-4 mx-8 rounded-t-lg border-t border-x border-slate-700 p-4 flex gap-4" aria-hidden="true">
          <div class="w-1/2 space-y-2">
            <div class="h-2 bg-slate-700 rounded w-3/4"></div>
            <div class="h-2 bg-slate-700 rounded w-full"></div>
            <div class="h-20 bg-slate-800 rounded border border-slate-700/50 flex items-center justify-center">
              <span class="text-[10px] text-slate-500">Diagram Preview</span>
            </div>
          </div>
          <div class="w-1/2 bg-blue-500/10 border border-blue-500/20 rounded p-2">
            <div class="flex gap-2 items-center mb-1">
              <Icon name="info" size="text-sm" class="text-blue-400" />
              <span class="text-[10px] font-bold text-blue-400">NOTE</span>
            </div>
            <div class="h-1.5 bg-blue-500/20 rounded w-full mb-1"></div>
            <div class="h-1.5 bg-blue-500/20 rounded w-5/6"></div>
          </div>
        </div>
      </div>

      <!-- Specialized Viewers Card -->
      <div class="group relative bg-surface-dark border border-slate-800 rounded-2xl overflow-hidden hover:border-green-500/50 transition-all duration-300">
        <div class="absolute inset-0 bg-gradient-to-br from-green-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity" aria-hidden="true"></div>
        <div class="p-8 relative z-10">
          <h3 class="text-2xl font-bold text-white mb-2">{t.visualFeatures.specializedViewers}</h3>
          <p class="text-slate-400 mb-6">{t.visualFeatures.specializedViewersSub}</p>
          <div class="space-y-4">
            <div class="flex items-start gap-3">
              <Icon name="hub" class="text-green-500 mt-1" />
              <div>
                <h4 class="text-white font-medium">{t.visualFeatures.jsonGraph}</h4>
                <p class="text-sm text-slate-500">{t.visualFeatures.jsonGraphDesc}</p>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <Icon name="table_chart" class="text-green-500 mt-1" />
              <div>
                <h4 class="text-white font-medium">{t.visualFeatures.csvPowerTable}</h4>
                <p class="text-sm text-slate-500">{t.visualFeatures.csvPowerTableDesc}</p>
              </div>
            </div>
            <div class="flex items-start gap-3">
              <Icon name="api" class="text-green-500 mt-1" />
              <div>
                <h4 class="text-white font-medium">{t.visualFeatures.swaggerUi}</h4>
                <p class="text-sm text-slate-500">{t.visualFeatures.swaggerUiDesc}</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Decorative graph mockup -->
        <div class="h-40 bg-[#0b0f19] mt-4 mx-8 rounded-t-lg border-t border-x border-slate-700 relative overflow-hidden" aria-hidden="true">
          <svg class="absolute inset-0 w-full h-full opacity-30" viewBox="0 0 400 200">
            <circle cx="200" cy="100" r="40" fill="none" stroke="#22c55e" stroke-width="2"></circle>
            <circle cx="100" cy="50" r="20" fill="#1e293b" stroke="#475569"></circle>
            <circle cx="300" cy="50" r="20" fill="#1e293b" stroke="#475569"></circle>
            <circle cx="100" cy="150" r="20" fill="#1e293b" stroke="#475569"></circle>
            <circle cx="300" cy="150" r="20" fill="#1e293b" stroke="#475569"></circle>
            <line x1="120" y1="60" x2="165" y2="85" stroke="#475569"></line>
            <line x1="280" y1="60" x2="235" y2="85" stroke="#475569"></line>
          </svg>
        </div>
      </div>
    </div>
  </div>
</section>
