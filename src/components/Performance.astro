---
import type { Translations } from '../i18n/utils';

interface Props {
  t: Translations;
}

const { t } = Astro.props;
---

<section class="py-20 border-t border-slate-800 bg-[#0b0f19] relative overflow-hidden" aria-labelledby="performance-heading">
  <div class="absolute top-0 right-0 -mr-20 -mt-20 w-64 h-64 bg-primary/10 rounded-full blur-3xl" aria-hidden="true"></div>

  <div class="max-w-5xl mx-auto px-4 text-center relative z-10">
    <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-slate-800/50 border border-slate-700 text-slate-300 text-sm font-mono mb-8">
      <span class="w-2 h-2 rounded-full bg-green-500 animate-pulse" aria-hidden="true"></span>
      {t.performance.startupBadge}
    </div>

    <h2 id="performance-heading" class="text-3xl md:text-4xl font-bold text-white mb-6">
      {t.performance.heading} <span class="text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-red-500">{t.performance.headingHighlight}</span>
    </h2>

    <p class="text-slate-400 max-w-2xl mx-auto mb-12">
      {t.performance.description}
    </p>

    <div class="flex flex-wrap justify-center gap-8 items-center opacity-80">
      <div class="flex flex-col items-center gap-2">
        <img
          src="/images/tauri-logo.svg"
          alt="Tauri 2 framework logo"
          width="48"
          height="48"
          class="w-12 h-12 object-contain"
          loading="lazy"
        />
        <span class="text-xs font-bold text-white tracking-wider">TAURI 2.0</span>
      </div>
      <div class="h-8 w-px bg-slate-700" aria-hidden="true"></div>
      <div class="flex flex-col items-center gap-2">
        <img
          src="/images/rust-logo.svg"
          alt="Rust programming language logo"
          width="48"
          height="48"
          class="w-12 h-12 object-contain"
          loading="lazy"
        />
        <span class="text-xs font-bold text-white tracking-wider">RUST</span>
      </div>
    </div>
  </div>
</section>
