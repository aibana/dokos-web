---
import Icon from './Icon.astro';
import type { Translations } from '../i18n/utils';

interface Props {
  t: Translations;
}

const { t } = Astro.props;

const features = [
  {
    icon: 'tab',
    title: t.multitasking.tabsTitle,
    description: t.multitasking.tabsDesc,
  },
  {
    icon: 'search',
    title: t.multitasking.searchTitle,
    description: t.multitasking.searchDesc,
  },
  {
    icon: 'restore',
    title: t.multitasking.sessionsTitle,
    description: t.multitasking.sessionsDesc,
  },
];
---

<section class="py-20 bg-background-dark border-t border-slate-800" id="project" aria-labelledby="project-heading">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col lg:flex-row gap-16 items-center">
      <div class="lg:w-1/2">
        <h2 id="project-heading" class="text-3xl font-bold text-white mb-6">{t.multitasking.heading}</h2>
        <div class="space-y-6">
          {features.map((feat) => (
            <div class="flex gap-4">
              <div class="w-10 h-10 rounded-lg bg-surface-dark border border-slate-700 flex items-center justify-center text-primary flex-shrink-0">
                <Icon name={feat.icon} />
              </div>
              <div>
                <h3 class="text-lg font-bold text-white">{feat.title}</h3>
                <p class="text-slate-400 text-sm mt-1">{feat.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Decorative app mockup -->
      <div class="lg:w-1/2 w-full" aria-hidden="true">
        <div class="bg-surface-dark rounded-xl border border-slate-700 shadow-2xl overflow-hidden">
          <div class="bg-[#0f131a] flex border-b border-slate-700">
            <div class="px-4 py-2 bg-[#1a2233] border-r border-slate-700 text-xs text-white flex items-center gap-2 border-t-2 border-primary">
              <Icon name="description" size="text-[14px]" class="text-yellow-400" />
              README.md
              <Icon name="close" size="text-[12px]" class="hover:text-white cursor-pointer ml-2" />
            </div>
            <div class="px-4 py-2 text-xs text-slate-500 hover:bg-slate-800/50 border-r border-slate-700 flex items-center gap-2 cursor-pointer transition-colors">
              <Icon name="data_object" size="text-[14px]" class="text-green-400" />
              config.json
            </div>
            <div class="px-4 py-2 text-xs text-slate-500 hover:bg-slate-800/50 border-r border-slate-700 flex items-center gap-2 cursor-pointer transition-colors">
              <Icon name="code" size="text-[14px]" class="text-blue-400" />
              server.py
            </div>
          </div>

          <div class="p-8 bg-[#1a2233] h-64 flex items-center justify-center">
            <div class="w-full max-w-sm bg-[#0f131a] rounded-lg border border-slate-600 shadow-xl overflow-hidden transform translate-y-[-10px]">
              <div class="p-3 border-b border-slate-700 flex items-center gap-3">
                <Icon name="search" class="text-slate-400" />
                <div class="bg-transparent text-white text-sm w-full">database_config</div>
                <span class="text-[10px] bg-slate-700 text-slate-300 px-1.5 rounded">Esc</span>
              </div>
              <div class="p-2">
                <div class="flex items-center gap-3 p-2 bg-primary/10 rounded cursor-pointer">
                  <Icon name="data_object" size="text-sm" class="text-yellow-400" />
                  <div class="flex-1">
                    <div class="text-xs text-white">config/database.json</div>
                    <div class="text-[10px] text-slate-500">Matches "database_config" on line 12</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
