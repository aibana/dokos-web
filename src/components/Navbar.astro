---
import Icon from './Icon.astro';
import logoDark from '../assets/logo-dark.svg';
import logoLight from '../assets/logo-light.svg';
import type { Locale, Translations } from '../i18n/utils';
import { locales, languageNames, getLocalePath } from '../i18n/utils';

interface Props {
  t: Translations;
  locale: Locale;
}

const { t, locale } = Astro.props;
const homePath = `${getLocalePath(locale)}/`;
---

<header>
  <nav class="sticky top-0 z-50 w-full backdrop-blur-md bg-white/70 dark:bg-background-dark/80 border-b border-slate-200 dark:border-slate-800" aria-label="Main navigation">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <a href={homePath} class="flex-shrink-0 flex items-center gap-2" aria-label="Dokos - Home">
          <img src={logoDark.src} alt="Dokos" class="h-8 w-8 hidden dark:block" />
          <img src={logoLight.src} alt="Dokos" class="h-8 w-8 block dark:hidden" />
          <span class="font-bold text-xl tracking-tight">Dokos</span>
        </a>

        <div class="hidden md:flex items-center space-x-8">
          <a class="text-sm font-medium text-slate-600 dark:text-slate-400 hover:text-primary dark:hover:text-primary transition-colors" href="#formats">{t.navbar.formats}</a>
          <a class="text-sm font-medium text-slate-600 dark:text-slate-400 hover:text-primary dark:hover:text-primary transition-colors" href="#visual">{t.navbar.visual}</a>
          <a class="text-sm font-medium text-slate-600 dark:text-slate-400 hover:text-primary dark:hover:text-primary transition-colors" href="#project">{t.navbar.project}</a>
          <a class="text-sm font-medium text-slate-600 dark:text-slate-400 hover:text-primary dark:hover:text-primary transition-colors" href="#profiles">{t.navbar.profiles}</a>
        </div>

        <div class="flex items-center gap-3">
          <!-- Language Switcher (desktop) -->
          <div class="relative hidden sm:block" id="lang-switcher">
            <button
              id="lang-btn"
              class="inline-flex items-center gap-1 text-sm font-medium text-slate-600 dark:text-slate-400 hover:text-primary transition-colors px-2 py-1 rounded-lg"
              aria-expanded="false"
              aria-haspopup="true"
              aria-label={t.navbar.languageLabel}
            >
              <Icon name="language" size="text-lg" />
              <span class="uppercase text-xs font-bold">{locale}</span>
              <Icon name="expand_more" size="text-sm" />
            </button>
            <div
              id="lang-dropdown"
              class="hidden absolute right-0 mt-2 w-36 bg-white dark:bg-surface-dark border border-slate-200 dark:border-slate-700 rounded-lg shadow-xl py-1 z-50"
              role="menu"
            >
              {locales.map((loc) => (
                <a
                  href={`${getLocalePath(loc)}/`}
                  class:list={[
                    'block px-4 py-2 text-sm transition-colors',
                    loc === locale
                      ? 'text-primary font-bold bg-primary/5'
                      : 'text-slate-600 dark:text-slate-400 hover:text-primary hover:bg-slate-50 dark:hover:bg-slate-800',
                  ]}
                  role="menuitem"
                  aria-current={loc === locale ? 'page' : undefined}
                >
                  {languageNames[loc]}
                </a>
              ))}
            </div>
          </div>

          <a class="hidden sm:inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-all" href="#">
            {t.common.downloadNow}
          </a>

          <button
            id="mobile-menu-btn"
            class="md:hidden inline-flex items-center justify-center p-2 rounded-lg text-slate-600 dark:text-slate-400 hover:text-primary hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors"
            aria-expanded="false"
            aria-controls="mobile-menu"
            aria-label="Open navigation menu"
          >
            <Icon name="menu" size="text-2xl" />
          </button>
        </div>
      </div>
    </div>

    <div id="mobile-menu" class="hidden md:hidden border-t border-slate-200 dark:border-slate-800 bg-white dark:bg-background-dark">
      <div class="px-4 py-4 space-y-3">
        <a class="block text-sm font-medium text-slate-600 dark:text-slate-400 hover:text-primary transition-colors" href="#formats">{t.navbar.formats}</a>
        <a class="block text-sm font-medium text-slate-600 dark:text-slate-400 hover:text-primary transition-colors" href="#visual">{t.navbar.visual}</a>
        <a class="block text-sm font-medium text-slate-600 dark:text-slate-400 hover:text-primary transition-colors" href="#project">{t.navbar.project}</a>
        <a class="block text-sm font-medium text-slate-600 dark:text-slate-400 hover:text-primary transition-colors" href="#profiles">{t.navbar.profiles}</a>

        <!-- Language Switcher (mobile) -->
        <div class="pt-3 border-t border-slate-200 dark:border-slate-700 space-y-2">
          <span class="block text-xs font-bold text-slate-500 uppercase tracking-wider">{t.navbar.languageLabel}</span>
          <div class="flex gap-2">
            {locales.map((loc) => (
              <a
                href={`${getLocalePath(loc)}/`}
                class:list={[
                  'px-3 py-1.5 text-sm rounded-lg transition-colors',
                  loc === locale
                    ? 'bg-primary text-white font-bold'
                    : 'bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400 hover:text-primary',
                ]}
              >
                {loc.toUpperCase()}
              </a>
            ))}
          </div>
        </div>

        <div class="pt-3 border-t border-slate-200 dark:border-slate-700 space-y-3">
          <a class="block w-full text-center px-4 py-2 text-sm font-medium rounded-lg text-white bg-primary hover:bg-primary-dark transition-all" href="#">
            {t.common.downloadNow}
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  // Language dropdown toggle
  const langBtn = document.getElementById('lang-btn');
  const langDropdown = document.getElementById('lang-dropdown');

  langBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    const isOpen = langDropdown?.classList.toggle('hidden') === false;
    langBtn.setAttribute('aria-expanded', String(isOpen));
  });

  document.addEventListener('click', () => {
    langDropdown?.classList.add('hidden');
    langBtn?.setAttribute('aria-expanded', 'false');
  });

  // Mobile menu toggle
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');

  btn?.addEventListener('click', () => {
    const isOpen = menu?.classList.toggle('hidden') === false;
    btn.setAttribute('aria-expanded', String(isOpen));
    const icon = btn.querySelector('.material-symbols-outlined');
    if (icon) icon.textContent = isOpen ? 'close' : 'menu';
  });

  menu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      menu.classList.add('hidden');
      btn?.setAttribute('aria-expanded', 'false');
      const icon = btn?.querySelector('.material-symbols-outlined');
      if (icon) icon.textContent = 'menu';
    });
  });
</script>
