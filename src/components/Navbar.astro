---
import Icon from './Icon.astro';
import logoDark from '../assets/logo-dark.svg';
import logoLight from '../assets/logo-light.svg';
import type { Locale, Translations } from '../i18n/utils';
import { locales, languageNames, getLocalePath } from '../i18n/utils';

interface Props {
  t: Translations;
  locale: Locale;
}

const { t, locale } = Astro.props;
const homePath = `${getLocalePath(locale)}/`;
---

<header>
  <nav
    id="main-nav"
    class="fixed top-0 z-50 w-full transition-all duration-300 ease-out translate-y-0 border-b border-transparent"
    aria-label="Main navigation"
    data-scrolled="false"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <a href={homePath} class="flex-shrink-0 flex items-center gap-2 transition-transform duration-200 hover:scale-105" aria-label="Dokos - Home">
          <img src={logoDark.src} alt="Dokos" width="32" height="32" class="h-8 w-8 hidden dark:block" />
          <img src={logoLight.src} alt="Dokos" width="32" height="32" class="h-8 w-8 block dark:hidden" />
          <span class="font-bold text-xl tracking-tight">Dokos</span>
        </a>

        <div class="hidden md:flex items-center space-x-8">
          <a class="nav-link relative text-sm font-medium text-slate-600 dark:text-slate-400 hover:text-primary dark:hover:text-primary transition-colors" href={`${homePath}#viewers`}>{t.navbar.formats}</a>
          <a class="nav-link relative text-sm font-medium text-slate-600 dark:text-slate-400 hover:text-primary dark:hover:text-primary transition-colors" href={`${homePath}#features`}>{t.navbar.visual}</a>
          <a class="nav-link relative text-sm font-medium text-slate-600 dark:text-slate-400 hover:text-primary dark:hover:text-primary transition-colors" href={`${homePath}#comparison`}>{t.navbar.project}</a>
          <a class="nav-link relative text-sm font-medium text-slate-600 dark:text-slate-400 hover:text-primary dark:hover:text-primary transition-colors" href={`${homePath}#profiles`}>{t.navbar.profiles}</a>
        </div>

        <div class="flex items-center gap-3">
          <!-- Language Switcher (desktop) -->
          <div class="relative hidden sm:block" id="lang-switcher">
            <button
              id="lang-btn"
              class="inline-flex items-center gap-1 text-sm font-medium text-slate-600 dark:text-slate-400 hover:text-primary transition-colors px-2 py-1 rounded-lg"
              aria-expanded="false"
              aria-haspopup="true"
              aria-label={t.navbar.languageLabel}
            >
              <Icon name="language" size="text-lg" />
              <span class="uppercase text-xs font-bold">{locale}</span>
              <Icon name="expand_more" size="text-sm" />
            </button>
            <div
              id="lang-dropdown"
              class="hidden absolute right-0 mt-2 w-36 bg-white dark:bg-surface-dark border border-slate-200 dark:border-slate-700 rounded-lg shadow-xl py-1 z-50"
              role="menu"
            >
              {locales.map((loc) => (
                <a
                  href={`${getLocalePath(loc)}/`}
                  class:list={[
                    'block px-4 py-2 text-sm transition-colors',
                    loc === locale
                      ? 'text-primary font-bold bg-primary/5'
                      : 'text-slate-600 dark:text-slate-400 hover:text-primary hover:bg-slate-50 dark:hover:bg-slate-800',
                  ]}
                  role="menuitem"
                  aria-current={loc === locale ? 'page' : undefined}
                >
                  {languageNames[loc]}
                </a>
              ))}
            </div>
          </div>

          <button class="nav-download-btn hidden sm:inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-all cursor-pointer">
            {t.common.downloadForFree}
          </button>

          <button
            id="mobile-menu-btn"
            class="md:hidden inline-flex items-center justify-center p-2 rounded-lg text-slate-600 dark:text-slate-400 hover:text-primary hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors"
            aria-expanded="false"
            aria-controls="mobile-menu"
            aria-label="Open navigation menu"
          >
            <Icon name="menu" size="text-2xl" />
          </button>
        </div>
      </div>
    </div>

    <div
      id="mobile-menu"
      class="md:hidden border-t border-slate-200 dark:border-slate-800 bg-white dark:bg-background-dark overflow-hidden transition-all duration-300 ease-out"
      style="max-height: 0; opacity: 0;"
    >
      <div class="px-4 py-4 space-y-3">
        <a class="block text-sm font-medium text-slate-600 dark:text-slate-400 hover:text-primary transition-colors" href={`${homePath}#viewers`}>{t.navbar.formats}</a>
        <a class="block text-sm font-medium text-slate-600 dark:text-slate-400 hover:text-primary transition-colors" href={`${homePath}#features`}>{t.navbar.visual}</a>
        <a class="block text-sm font-medium text-slate-600 dark:text-slate-400 hover:text-primary transition-colors" href={`${homePath}#comparison`}>{t.navbar.project}</a>
        <a class="block text-sm font-medium text-slate-600 dark:text-slate-400 hover:text-primary transition-colors" href={`${homePath}#profiles`}>{t.navbar.profiles}</a>

        <!-- Language Switcher (mobile) -->
        <div class="pt-3 border-t border-slate-200 dark:border-slate-700 space-y-2">
          <span class="block text-xs font-bold text-slate-500 uppercase tracking-wider">{t.navbar.languageLabel}</span>
          <div class="flex gap-2">
            {locales.map((loc) => (
              <a
                href={`${getLocalePath(loc)}/`}
                class:list={[
                  'px-3 py-1.5 text-sm rounded-lg transition-colors',
                  loc === locale
                    ? 'bg-primary text-white font-bold'
                    : 'bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400 hover:text-primary',
                ]}
              >
                {loc.toUpperCase()}
              </a>
            ))}
          </div>
        </div>

        <div class="pt-3 border-t border-slate-200 dark:border-slate-700 space-y-3">
          <button class="nav-download-btn block w-full text-center px-4 py-2 text-sm font-medium rounded-lg text-white bg-primary hover:bg-primary-dark transition-all cursor-pointer">
            {t.common.downloadForFree}
          </button>
        </div>
      </div>
    </div>
  </nav>
</header>

<style>
  /* Underline animation for nav links */
  .nav-link::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 0;
    height: 2px;
    background: var(--color-primary, #6366f1);
    border-radius: 1px;
    transition: width 0.25s ease-out;
  }
  .nav-link:hover::after {
    width: 100%;
  }

  /* Navbar scrolled state */
  nav[data-scrolled="true"] {
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    background: rgba(255, 255, 255, 0.8);
    border-bottom-color: rgb(226 232 240); /* slate-200 */
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.05);
  }
  :global(.dark) nav[data-scrolled="true"] {
    background: rgba(15, 23, 42, 0.85);
    border-bottom-color: rgb(30 41 59); /* slate-800 */
  }

  /* Initial entrance animation */
  nav {
    animation: nav-slide-down 0.5s ease-out both;
  }
  @keyframes nav-slide-down {
    from {
      opacity: 0;
      transform: translateY(-100%);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Hidden state for hide-on-scroll */
  nav.nav-hidden {
    transform: translateY(-100%);
  }
</style>

<script>
  const nav = document.getElementById('main-nav');
  let lastScrollY = window.scrollY;
  let ticking = false;
  const SCROLL_THRESHOLD = 10;
  const SHOW_OFFSET = 60;

  function updateNav() {
    const currentScrollY = window.scrollY;

    // Scrolled state (background + blur)
    const isScrolled = currentScrollY > 20;
    nav?.setAttribute('data-scrolled', String(isScrolled));

    // Hide/show on scroll direction
    if (currentScrollY > SHOW_OFFSET) {
      if (currentScrollY - lastScrollY > SCROLL_THRESHOLD) {
        // Scrolling down — hide
        nav?.classList.add('nav-hidden');
      } else if (lastScrollY - currentScrollY > SCROLL_THRESHOLD) {
        // Scrolling up — show
        nav?.classList.remove('nav-hidden');
      }
    } else {
      // Near top — always show
      nav?.classList.remove('nav-hidden');
    }

    lastScrollY = currentScrollY;
    ticking = false;
  }

  window.addEventListener('scroll', () => {
    if (!ticking) {
      requestAnimationFrame(updateNav);
      ticking = true;
    }
  }, { passive: true });

  // Language dropdown toggle
  const langBtn = document.getElementById('lang-btn');
  const langDropdown = document.getElementById('lang-dropdown');

  langBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    const isOpen = langDropdown?.classList.toggle('hidden') === false;
    langBtn.setAttribute('aria-expanded', String(isOpen));
  });

  document.addEventListener('click', () => {
    langDropdown?.classList.add('hidden');
    langBtn?.setAttribute('aria-expanded', 'false');
  });

  // Mobile menu toggle with smooth animation
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu') as HTMLElement | null;
  let menuOpen = false;

  function openMenu() {
    if (!menu) return;
    menuOpen = true;
    menu.style.maxHeight = menu.scrollHeight + 'px';
    menu.style.opacity = '1';
    btn?.setAttribute('aria-expanded', 'true');
    const icon = btn?.querySelector('.material-symbols-outlined');
    if (icon) icon.textContent = 'close';
  }

  function closeMenu() {
    if (!menu) return;
    menuOpen = false;
    menu.style.maxHeight = '0';
    menu.style.opacity = '0';
    btn?.setAttribute('aria-expanded', 'false');
    const icon = btn?.querySelector('.material-symbols-outlined');
    if (icon) icon.textContent = 'menu';
  }

  btn?.addEventListener('click', () => {
    menuOpen ? closeMenu() : openMenu();
  });

  menu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', closeMenu);
  });

  // Smooth scroll for anchor links
  document.querySelectorAll<HTMLAnchorElement>('nav a[href*="#"]').forEach(link => {
    link.addEventListener('click', (e) => {
      const hash = new URL(link.href).hash;
      if (!hash) return;
      const target = document.querySelector(hash);
      if (!target) return;
      e.preventDefault();
      target.scrollIntoView({ behavior: 'smooth' });
      history.pushState(null, '', hash);
    });
  });

  // Wire download buttons to modal
  document.querySelectorAll('.nav-download-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      closeMenu();
      const fn = (window as any).openDownloadModal;
      if (typeof fn === 'function') fn();
    });
  });

</script>
